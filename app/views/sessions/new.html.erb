<h1 class= "center">Welcome to Message Me "The chat App"</h1>
  <h2 class="ui center aligned icon header">
    <i class="circular blue dollar sign icon"></i>
      Log in to continue
</h2>
<%= form_for :session, url: login_path do |m| %>
  <div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
      <div class="column">
        <div class="ui form">
          <div class="field">
            <%= m.label :Username %>
            <div class="ui left icon input">
              <%= m.text_field :username , placeholder: "Username" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= m.label :Password %>
            <div class="ui left icon input">
              <%= m.password_field :password, placeholder: "Password" %>
              <i class="lock icon"></i>
            </div>
          </div>
        <%= m.submit "Login", class: "ui blue submit button" %>
      </div>
    </div>
  <% end %>
    <div class="middle aligned column">
      <div class="ui blue button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
